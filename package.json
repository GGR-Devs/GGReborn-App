{
  "name": "ggreborn-app",
  "productName": "GGRebornApp",
  "license": "MIT",
  "version": "0.0.8",
  "description": "Simple, customizable client with built in flash player to play GoodGame Caf√©, Disco and Fashion.",
  "author": {
    "name": "Bence Fodor",
    "email": "bence@ggreborn.net"
  },
  "main": "app/main.js",
  "repository": "https://github.com/GGR-Devs/GGReborn-App",
  "homepage": "https://ggreborn.net",
  "bugs": {
    "url": "https://github.com/GGR-Devs/GGReborn-App/issues",
    "email": "bence@ggreborn.net"
  },
  "maintainers": [
    {
      "name": "Bence Fodor",
      "email": "bence@ggreborn.net"
    },
    {
      "name": "GGReborn Devs",
      "email": "support@ggreborn.net"
    }
  ],
  "contributors": [
    {
      "name": "Bence Fodor",
      "url": "https://github.com/bxn4",
      "email": "bence@ggreborn.net"
    },
    {
      "name": "Santi13",
      "url": "https://github.com/santi134565"
    },
    {
      "name": "MKerem",
      "url": "https://github.com/keremgokcek"
    },
    {
      "name": "SulivanM",
      "url": "https://github.com/SulivanM"
    }
  ],
  "keywords": [
    "ggreborn",
    "ggreborn app",
    "goodgame cafe reborn",
    "goodgame disco reborn",
    "goodgame fashion reborn",
    "goodgame studios",
    "flash game"
  ],
  "funding": {
    "type": "Buy Me a Coffee",
    "url": "https://buymeacoffee.com/ggreborn"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.ggreborn.ggrebornapp",
    "productName": "GGRebornApp",
    "win": {
      "target": "nsis",
      "icon": "./app/icons/icon.ico",
      "extraResources": [
        {
          "from": "lib/pepflashplayer.dll",
          "to": "lib/pepflashplayer.dll"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "extraResources": [
        {
          "from": "lib/PepperFlashPlayer.plugin",
          "to": "lib/PepperFlashPlayer.plugin"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "tar.gz",
        "deb"
      ],
      "icon": "./app/icons/icon.png",
      "category": "Game",
      "extraResources": [
        {
          "from": "lib/libpepflashplayer.so",
          "to": "lib/libpepflashplayer.so"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "deleteAppDataOnUninstall": true,
      "createDesktopShortcut": true
    },
    "asar": true,
    "files": [
      "**/*",
      "!lib",
      "!app/icons"
    ]
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.3.9",
    "pouchdb": "^9.0.0"
  },
  "devDependencies": {
    "electron": "10.0.0",
    "electron-builder": "^25.1.8"
  }
}
