{
  "name": "GGRebornApp",
  "version": "0.0.4",
  "description": "Simple, customizable client with built in flash player to play GoodGame Caf√©, Disco and Fashion.",
  "main": "app/src/main.js",
  "repository": "https://github.com/GGR-Devs/GGReborn-App",
  "author": "GGReborn",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.ggreborn.app",
    "productName": "GGRebornApp",
    "win": {
      "target": "nsis",
      "icon": "./app/icons/icon.ico",
      "extraResources": [
        {
          "from": "lib/pepflashplayer.dll",
          "to": "lib/pepflashplayer.dll"
        }
      ]
    },
    "mac": {
      "extraResources": [
        {
          "from": "lib/PepperFlashPlayer.plugin",
          "to": "lib/PepperFlashPlayer.plugin"
        }
      ]
    },
    "linux": {
      "extraResources": [
        {
          "from": "lib/libpepflashplayer.so",
          "to": "lib/libpepflashplayer.so"
        }
      ]
    },
    "asar": true,
    "files": [
      "**/*",
      "!lib",
      "!app/icons"
    ]
  },
  "dependencies": {
    "discord-rpc": "^4.0.1",
    "electron-updater": "^6.1.8"
  },
  "devDependencies": {
    "electron": "22.3.25",
    "electron-builder": "^24.13.3"
  }
}
